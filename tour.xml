	<scene name="VR_07_8th_Floor_Arrival" title="VR_07_8th_Floor_Arrival" onstart="startupeighthFloor();updateradar();" thumburl="panos/VR_07_8th_Floor_Arrival.tiles/thumb.jpg" lat="" lng="" heading="">
